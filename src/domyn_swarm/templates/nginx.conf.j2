pid /tmp/nginx.pid;

events {
    worker_connections 100000;
}

http {
    upstream vllm {
        server {{ host }}:{{ vllm_port }};
        keepalive 32;               # Optional but nice for many short requests
    }

    upstream ray {
        server {{ host }}:{{ ray_port }};
        keepalive 8;
    }

    server {
        listen {{ port }};

        location / {
            proxy_pass              http://vllm;
            proxy_read_timeout      300s;
            proxy_connect_timeout   60s;
            proxy_set_header Host   $host;
            proxy_set_header X-Real-IP $remote_addr;
        }

        location ^~ /dashboard/ {
            proxy_pass              http://ray/;     # <â”€ note slash here
            proxy_read_timeout      300s;
            proxy_connect_timeout   60s;
            proxy_set_header Host   $host;
            proxy_set_header X-Real-IP $remote_addr;
        }

        location = /dashboard {
            return 301 /dashboard/;
        }
    }
}
